            });

            $(serviceDropdown).on('change', () => {
                let serviceSelected = document.getElementById('serviceDropdown').value;
                $('#service').val(serviceSelected);
            });

            $("#submit").click(() => {
                $("jur").val("");
                $("pro").val("");
                $("service").val("");
            });

            $('#pitlogo').click(() => {
